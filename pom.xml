<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <!-- 子模块会继承父模块的一些特性，例如插件 -->
    <build>
        <!-- 插件 -->
        <plugins>
            <!-- 具体插件 -->
            <plugin>
                <!-- 使用1.7的jdk -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
        </plugins>
        <!-- 指定 src/main/resources下所有文件及文件夹为资源文件 -->
        <resources>
        <resource>
            <directory>src/main/resources</directory>
            <filtering>true</filtering> <!--是否使用过滤器-->
        </resource>
        </resources>

        <!-- ${basedir} 存放 pom.xml和所有的子目录 -->
        <!-- 忽略根目录下的 test 下的测试文件 -->
        <testResources>

            <testResource>
                <directory> ${basedir}/demo.service/src/test/resources</directory>
            </testResource>
        </testResources>
    </build>

    <!-- 描述这个POM文件是遵从哪个版本的项目描述符。 -->
    <modelVersion>4.0.0</modelVersion>

    <!-- 项目组id -->
    <groupId>demo</groupId>
    <!-- 项目组下的某项工程id -->
    <artifactId>demo.parent</artifactId>
    <!-- 打包，父工程为pom -->
    <packaging>pom</packaging>
    <!-- 版本 -->
    <version>1.0.0</version>
    <!-- 子模块 -->
    <modules>
        <module>demo.service</module>
        <module>demo.web</module>
    </modules>



    <!-- 生产开发环境分离
     maven 会根据选择 打包
     并且 spring 可以配置 在web.xml 中配置
     <context-param>
        <param-name>contextInitializerClasses</param-name>
        <param-value>demo.config.ProfileInitializer</param-value>
    </context-param>
    在启动spring 初始化 context 前 进行定制
     -->
    <profiles>
        <profile>
            <id>product</id>
            <build>
                <filters>
                    <filter>../vars/dev.properties</filter>
                </filters>
            </build>
        </profile>
        <profile>
            <id>test</id>
            <build>
                <filters>
                    <filter>../vars/test.properties</filter>
                </filters>
            </build>
        </profile>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <!-- 启动时拦截该文件 -->
                <filters>
                    <filter>../vars/dev.properties</filter>
                </filters>
            </build>
        </profile>
    </profiles>


