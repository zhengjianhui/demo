<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="demo.dao.mybatis.db2.bill.SubjectChargeItemRelationMapper">
    <resultMap id="BaseResultMap" type="demo.domain.bill.SubjectChargeItemRelation">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="charge_item_id" property="chargeItemId" jdbcType="BIGINT"/>
        <result column="subject_type" property="subjectType" jdbcType="VARCHAR"/>
        <result column="subject_id" property="subjectId" jdbcType="BIGINT"/>
        <result column="fee_discount" property="feeDiscount" jdbcType="DECIMAL"/>
        <result column="fee_expire_date" property="feeExpireDate" jdbcType="DATE"/>
    </resultMap>
    <sql id="Base_Column_List">
    id, charge_item_id, subject_type, subject_id, fee_discount, fee_expire_date
  </sql>

    <select id="selectParkingSpaceChargeItemRelationWithoutHouse" resultMap="BaseResultMap">
        select a.*
        from md_subject_charge_item_relation a, md_parking_space b
        where a.subject_id = b.id
        and b.block_id = #{dto.blockId,jdbcType=BIGINT}
        <if test="chargeItemId != null">
            and a.charge_item_id = #{chargeItemId,jdbcType=BIGINT}
        </if>
        <if test="dto.parkingLotId != null">
            and b.parking_lot_id = #{dto.parkingLotId,jdbcType=BIGINT}
        </if>
        <if test="dto.spaceType != null">
            and b.space_type = #{dto.spaceType,jdbcType=BIGINT}
        </if>
        <if test="dto.hasRelationHouse">
            and b.relation_house_id is not null
        </if>
        <if test="dto.no != null">
            and b.no = #{dto.no,jdbcType=VARCHAR}
        </if>
        <if test="dto.status != null">
            and b.status = #{dto.status,jdbcType=INTEGER}
        </if>
        <if test="dto.parkingSpaceIdList != null">
            and b.id in
            <foreach collection="dto.parkingSpaceIdList" item="item" open="(" separator=","
                     close=")">
                #{item,jdbcType=BIGINT}
            </foreach>
        </if>
    </select>


</mapper>
